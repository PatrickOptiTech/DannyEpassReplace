
{
  "name": "epass-desktop",
  "version": "1.0.0",
  "description": "A simple desktop application for EPASS.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^13.1.7",
    "electron-builder": "^22.11.7"
  },
  "build": {
    "appId": "com.epass.desktop",
    "productName": "EPASS Desktop",
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!src/**/*",
      "!.git/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
